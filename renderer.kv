<RootWidget>:

    ScreenManager:
        id: sm

        Screen:
            name: 'in_screen'
            id: in_screen

            BoxLayout:
                orientation: 'vertical'
                spacing: 8
                padding: 60

                Image:
                    source: 'logo_transparent_cropped.png'
                HeightInput:
                    id: height_text
                    text: 'Enter height [m]...'
                    #on_touch_down: height_text.text = ''
                WeightInput:
                    id: weight_text
                    text: 'Enter body weight [kg]...'
                    #on_touch_down: weight_text.text = ''

                RenderButton:
                    text: 'Render'

        RenderScreen:
            name: 'render_screen'
            id: render_screen

        MeasurementsScreen:
            name: 'measurements_screen'
            id: measurements_screen

            BoxLayout:
                orientation: 'vertical'
                Label:
                    id: meas1
                Label:
                    id: meas2
                Label:
                    id: meas3
                Label:
                    id: meas4
                Label:
                    id: meas5
                Label:
                    id: meas6
                Label:
                    id: meas7
                Label:
                    id: meas8
                Label:
                    id: meas9
                Label:
                    id: meas10
                Label:
                    id: meas11
